{
  "name": "@issuedesk/auth-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for IssueDesk GitHub App authentication",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "build": "tsc && esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "validate-env": "node scripts/validate-env.cjs"
  },
  "dependencies": {
    "@issuedesk/shared": "workspace:*",
    "@octokit/auth-app": "^7.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.0",
    "esbuild": "^0.24.0",
    "miniflare": "^3.20241106.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5",
    "wrangler": "^3.95.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
