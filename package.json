{
  "name": "issuedesk",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:mobile": "pnpm --filter @issuedesk/mobile start",
    "dev:desktop": "pnpm --filter @issuedesk/desktop dev",
    "dev:all": "pnpm -r --parallel --filter @issuedesk/shared --filter @issuedesk/github-api --filter @issuedesk/desktop run dev",
    "build:mobile": "pnpm --filter @issuedesk/mobile build",
    "build:desktop": "pnpm --filter @issuedesk/desktop build",
    "build:shared": "pnpm --filter @issuedesk/shared build",
    "build:github-api": "pnpm --filter @issuedesk/github-api build",
    "build:all": "pnpm build:shared && pnpm build:github-api && pnpm build:desktop",
    "dist:desktop": "pnpm --filter @issuedesk/desktop dist",
    "dist:desktop:mac": "pnpm --filter @issuedesk/desktop dist:mac",
    "dist:desktop:win": "pnpm --filter @issuedesk/desktop dist:win",
    "dist:desktop:linux": "pnpm --filter @issuedesk/desktop dist:linux",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
