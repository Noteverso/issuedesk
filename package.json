{
  "name": "issuedesk",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev:mobile": "pnpm --filter @issuedesk/mobile start",
    "dev:desktop": "pnpm --filter @issuedesk/desktop dev",
    "dev:auth": "pnpm --filter @issuedesk/auth-worker dev",
    "dev:all": "concurrently \"pnpm --filter @issuedesk/shared dev\" \"pnpm --filter @issuedesk/github-api dev\" \"pnpm --filter @issuedesk/desktop dev\"",
    "build:mobile": "pnpm --filter @issuedesk/mobile build",
    "build:desktop": "pnpm --filter @issuedesk/desktop build",
    "build:shared": "pnpm --filter @issuedesk/shared build",
    "build:github-api": "pnpm --filter @issuedesk/github-api build",
    "build:packages": "pnpm build:shared && pnpm build:github-api",
    "build:all": "pnpm build:shared && pnpm build:github-api && pnpm build:desktop",
    "dist:desktop": "pnpm --filter @issuedesk/desktop dist",
    "dist:desktop:mac": "pnpm --filter @issuedesk/desktop dist:mac",
    "dist:desktop:mac:arm64": "pnpm --filter @issuedesk/desktop dist:mac:arm64",
    "dist:desktop:mac:universal": "pnpm --filter @issuedesk/desktop dist:mac:universal",
    "dist:desktop:win": "pnpm --filter @issuedesk/desktop dist:win",
    "dist:desktop:linux": "pnpm --filter @issuedesk/desktop dist:linux",
    "dist:desktop:make": "pnpm --filter @issuedesk/desktop make",
    "clean": "bash -c 'rm -rf node_modules apps/*/node_modules packages/*/node_modules'",
    "lint": "pnpm -r --if-present lint",
    "type-check": "pnpm -r --if-present type-check",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "concurrently": "^9.1.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
